<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Player 1: X"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Player 2: 0"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text=""
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text00"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text01"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text00"
        app:layout_constraintLeft_toRightOf="@+id/text00"/>

    <TextView
        android:id="@+id/text02"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text01"
        app:layout_constraintLeft_toRightOf="@+id/text01"/>

    <TextView
        android:id="@+id/text10"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text00"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/text11"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text10"
        app:layout_constraintLeft_toRightOf="@+id/text10"/>

    <TextView
        android:id="@+id/text12"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text11"
        app:layout_constraintLeft_toRightOf="@+id/text11"/>

    <TextView
        android:id="@+id/text20"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/text21"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text20"
        app:layout_constraintLeft_toRightOf="@+id/text20"/>

    <TextView
        android:id="@+id/text22"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text21"
        app:layout_constraintLeft_toRightOf="@+id/text21"/>

    <Button
        android:id="@+id/new_game"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start New Game"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>